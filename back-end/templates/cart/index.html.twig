{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Panier</h1>

        {% if cart|length > 0 %}
            <div class="cart-actions">
                <a href="{{ path('app_cart_clear') }}" class="btn btn-danger">Tout supprimer</a>
                <a href="{{ path('app_payment_redirect') }}" class="btn btn-primary">Valider et payer</a>
            </div>
        {% endif %}

        <div class="row">
            {% for item in cart %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        {% if item.product.image %}
                            <img src="{{ asset('uploads/' ~ item.product.image) }}" class="card-img-top" alt="{{ item.product.name }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ item.product.name }}</h5>
                            <p class="card-text">Price: {{ item.product.price }}</p>
                            <p class="card-text">Quantity: {{ item.quantity }}</p>
                            <a href="{{ path('app_product_show', {'id': item.product.id}) }}" class="btn btn-secondary">Show</a>
                            <a href="{{ path('app_cart_add', {'id': item.product.id}) }}" class="btn btn-success">Add</a>
                            <a href="{{ path('app_cart_delete', {'id': item.product.id}) }}" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p class="text-center">No records found</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

   