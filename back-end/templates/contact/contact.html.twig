{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block body %}
    <div class="container-contact">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'required': 'required', 'rows': 5}}) }}
                </div>
                <button type="submit" class="btn">Envoyer</button>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6">
                <div class="contact-info">
                    <img src="{{ asset('assets/images/LOGO/BWM.png') }}" alt="Logo Beauty Prestige" class="logo">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
