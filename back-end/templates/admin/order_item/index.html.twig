{% extends 'base.html.twig' %}

{% block title %}Elèments de commande {% endblock %}

{% block body %}
    <h1>Elèments de commande </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantités commandés</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.quantity }}</td>
                <td>
                    <a href="{{ path('admin_order_item_show', {'id': order_item.id}) }}"class="btn btn-primary btn-sm">Regarder</a>
                   
                    <a href="{{ path('admin_order_item_delete', {'id': order_item.id}) }}"class="btn btn-secondary btn-sm">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun element de commande</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_order_item_new') }}"class="btn btn-success">Créer un nouvel élément de commande</a>
{% endblock %}
