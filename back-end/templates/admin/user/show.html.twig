{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Est-il vérifié?</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index') }}">Revnir à la liste</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier L'utilisateur</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
