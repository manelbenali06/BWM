{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ order.reference }}</td>
            </tr>
            <tr>
                <th>Payé le:</th>
                <td>{{ order.paidAt ? order.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PayementId</th>
                <td>{{ order.paymentId }}</td>
            </tr>
            <tr>
                <th>Montant de la commande</th>
                <td>{{ order.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_order_index') }}">Revenir à la liste</a>

    <a href="{{ path('admin_order_edit', {'id': order.id}) }}">Modifier</a>

    {{ include('admin/order/_delete_form.html.twig') }}
{% endblock %}
