{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ order.reference }}</td>
            </tr>
            <tr>
                <th>PaidAt</th>
                <td>{{ order.paidAt ? order.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PaymentId</th>
                <td>{{ order.paymentId }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_order_index') }}">back to list</a>

    <a href="{{ path('admin_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('admin/order/_delete_form.html.twig') }}
{% endblock %}
