{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
   
    <section class="container">
        <div class="row">
            <div class="col">
              <h1 class="custom-h1">Créer un compte</h1>
            <!--Pour afficher la propiriété registrationForm défini dans notre controleur on doit lui passer une methode qui va l'afficher 
            sur twig 'form' -->
                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Mon identité</legend>
                        {{ form_row(registrationForm.lastname) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend>Mes coordonnées</legend>
                        {{ form_row(registrationForm.address) }}
                        {{ form_row(registrationForm.zipcode) }}
                        {{ form_row(registrationForm.city) }}
                    </fieldset>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                   {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn">M'inscrire</button>
                    <a href="{{ path('app_login') }}" class="btn">Me connecter</a>
                {{ form_end(registrationForm) }}            
            </div>
        </div>
        {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    </section>
{% endblock %}
