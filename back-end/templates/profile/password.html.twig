{% extends 'base.html.twig' %}
{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4">Modifier mon mot de passe</h1>
        
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.oldPassword, 'Ancien mot de passe') }}
                {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword, 'Nouveau mot de passe') }}
                {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_end(form) }}

{% endblock %}